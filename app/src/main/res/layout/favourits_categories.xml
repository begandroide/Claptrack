<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:columnCount="2"
        android:rowCount="3">

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/im_not"
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/figure_background_select"
                android:src="@drawable/shooter"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="Shooter"
                android:textColor="@color/White"
                android:textSize="25sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/figure_background_select"
                android:src="@drawable/aventure" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="Adventure"
                android:textColor="@color/White"
                android:textSize="25sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/figure_background_select"
                android:src="@drawable/rpg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="RPG"
                android:textColor="@color/White"
                android:textSize="25dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/figure_background_select"
                android:layout_gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/plataformer" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="Plataformer"
                android:textColor="@color/White"
                android:textSize="23dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/figure_background_select">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/horror" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="Horror"
                android:textColor="@color/White"
                android:textSize="25dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="95dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/figure_background_select"
                android:src="@drawable/sports" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="Sports"
                android:textColor="@color/White"
                android:textSize="25dp" />
        </FrameLayout>
    </GridLayout>
</LinearLayout>