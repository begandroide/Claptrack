<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@android:color/transparent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp">


            <ImageView
                android:id="@+id/appIconIV"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/reddeadii" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_weight="1"
                android:id="@+id/aNametxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/md_light_blue_600"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Red Dead Redemption II"
                android:gravity="center"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/aVersiontxt"
                android:text="Android Version"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:gravity="center"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/aVersiontxta"
                android:text="Android Version"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="8dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/line_separator"/>

</LinearLayout>