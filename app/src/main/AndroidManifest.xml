<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cl.bgautier.claptrack">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/WelcomeTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".ui.categoryActivity" android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ui.DescriptionActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".ui.CardStackActivity"/>
        <activity android:name=".ui.platformActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ui.CardStackActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter >
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.Search"
            android:parentActivityName=".ui.CardStackActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.Mainlist"
            android:parentActivityName=".ui.Search"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.WishlistActivity"
            android:parentActivityName=".ui.CardStackActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.PreferencesActivity"
            android:parentActivityName=".ui.CardStackActivity"
            android:theme="@style/AppTheme.NoActionBar"/>


    </application>

</manifest>